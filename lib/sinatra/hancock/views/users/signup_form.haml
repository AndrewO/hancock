%fieldset
  %legend Signup for an account
  %form{:action => '/sso/signup', :method => 'POST'}
    %label{:for => 'first_name'} 
      First Name:
      %input{:type => 'text', :name => 'first_name'}
      %br
    %label{:for => 'last_name'} 
      Last Name:
      %input{:type => 'text', :name => 'last_name'}
      %br
    %label{:for => 'email'} 
      Email:
      %input{:type => 'text', :name => 'email'}
      %br
    %input{:type => 'submit', :value => 'Signup'}
    or
    %a{:href => '/'} Cancel
